#!/usr/bin/env bash

# Update sources:
sudo apt-get update

# Install development tools:
sudo apt-get -y install build-essential autoconf bison

# Packages required for compilation of some stdlib modules
sudo apt-get -y install tklib libncurses5-dev libffi-dev libgdbm3 libgdbm-dev

# Extras for RubyGems and Rails:
sudo apt-get -y install zlib1g-dev libssl-dev libyaml-dev

# Readline Dev on Ubuntu 16.04 LTS:
sudo apt-get -y install libreadline6-dev

# Install some nokogiri dependencies:
sudo apt-get -y install libxml2 libxml2-dev libxslt1-dev

